{
  "name": "hello-terraform-lambda",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "testbuild": "ts-node -O '{\"resolveJsonModule\":true}' build.ts",
    "prebuild": "rm -rf dist",
    "build": "esbuild src/index.ts --bundle --minify --sourcemap --platform=node --target=es2020 --outfile=dist/index.js",
    "postbuild": "cd dist && zip -r index.zip index.js*",
    "deploy": "yarn build && terraform apply -auto-approve"
  },
  "author": "u7chan",
  "license": "MIT",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.101",
    "@types/node": "^18.0.0",
    "compressing": "^1.6.0",
    "esbuild": "^0.14.47",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.118.1"
  }
}
